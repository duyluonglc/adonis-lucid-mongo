{
  "name": "lucid-mongo",
  "description": "A Mongodb ODM",
  "main": "index.js",
  "version": "2.1.2",
  "scripts": {
    "lint": "standard",
    "pretest": "npm run test:cleanup && npm run lint",
    "test:cleanup": "rm -rf test/functional/database && rm -rf test/unit/tmp",
    "posttest": "npm run test:cleanup && npm run coverage",
    "test:local": "npm run test:cleanup && FORCE_COLOR=true DB=mongodb node bin/index.js --local",
    "test": "nyc npm run test:local",
    "test:win": "set DB=mongodb&& node bin/index.js --win",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "adonis",
    "lucid",
    "mongo",
    "mongodb",
    "orm",
    "odm"
  ],
  "standard": {
    "global": [
      "use",
      "describe",
      "it",
      "after",
      "before",
      "context",
      "make",
      "beforeEach"
    ]
  },
  "author": "LuongND",
  "license": "MIT",
  "dependencies": {
    "@adonisjs/generic-exceptions": "^1.0.0",
    "chance": "^1.0.12",
    "debug": "^3.1.0",
    "geopoint": "^1.0.1",
    "lodash": "^4.17.4",
    "moment": "^2.19.1",
    "mongo-uri-builder": "^1.0.3",
    "mongodb": "^3.0.0",
    "mquery": "^2.3.2",
    "pluralize": "^7.0.0",
    "pretty-hrtime": "^1.0.3",
    "require-all": "^2.2.0"
  },
  "devDependencies": {
    "@adonisjs/ace": "git+https://github.com/adonisjs/ace.git#dawn",
    "@adonisjs/fold": "^4.0.5",
    "@adonisjs/sink": "^1.0.13",
    "clear-require": "^2.0.0",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^5.0.0",
    "japa": "^1.0.5",
    "japa-cli": "^1.0.1",
    "nyc": "^11.3.0",
    "standard": "^10.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "include": [
      "src",
      "lib"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/duyluonglc/lucid-mongo.git"
  }
}
